<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vachonn.channelmessaging.LoginActivity"
    android:id="@+id/llBackground"
    android:background="@color/black"
    android:weightSum="1">


    <ImageView
        android:layout_width="190dp"
        android:layout_height="98dp"
        android:id="@+id/imageView"
        android:src="@drawable/channel_messaging_logo"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.24" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColorHint="@color/white">

        <EditText
            android:id="@+id/edId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:inputType="textEmailAddress"
            android:hint="@string/login"/>


    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtMdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColorHint="@color/white">


        <EditText
            android:id="@+id/edMdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:inputType="textEmailAddress"
            android:hint="@string/mdp"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:id="@+id/btValider"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/edMdp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/orange"/>

    <TextView
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="Connectez vous pour accéder à la messagerie instantanée"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/edId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/orange"/>
</LinearLayout>
